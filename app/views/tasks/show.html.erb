<h2><%= @task.title %></h2>
<div class="details">
  <p><%= @task.details %></p>
</div>

<p>
<%= check_box_tag 'task_ids[]', @task.id, checked = @task.completed, disabled: true %>
<% if @task.completed %>
  <%= 'This task is completed' %>
  <% else %>
  <%= 'This task is not completed yet' %>
<% end %>
</p>

<hr></hr>
<%= link_to "Edit task", task_edit_path(@task) %>
<%= link_to "Delete task", task_path(@task), method: "delete" %>
<hr></hr>
<%= link_to "Back to list", tasks_path %>
